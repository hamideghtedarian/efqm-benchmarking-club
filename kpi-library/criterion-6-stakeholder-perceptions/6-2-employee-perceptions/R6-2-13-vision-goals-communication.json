    "anonymity": "ضروری",
    "response_rate_target": ">70%",
    "responsible_department": "ارتباطات داخلی، استراتژی",
    "responsible_person": "مدیر ارتباطات داخلی"
  },
  "calculation_example": {
    "scenario": "نظرسنجی از 550 کارکن",
    "input_data": {
      "total_responses": 550,
      "score_5": 130,
      "score_4": 210,
      "score_3": 140,
      "score_2": 50,
      "score_1": 20
    },
    "calculation_steps": [
      "مجموع = (130×5) + (210×4) + (140×3) + (50×2) + (20×1)",
      "= 650 + 840 + 420 + 100 + 20 = 2030",
      "میانگین = 2030 / 550 = 3.69",
      "درصد = (3.69 / 5) × 100 = 73.8%"
    ],
    "result": "73.8%",
    "interpretation": "رضایت 73.8% نشان‌دهنده ارتباطات خوب است. 61.8% درک خوبی دارند اما 12.7% سردرگم هستند."
