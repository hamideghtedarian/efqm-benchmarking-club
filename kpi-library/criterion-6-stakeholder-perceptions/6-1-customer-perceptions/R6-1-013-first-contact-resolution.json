    "kpi_name_fa": "نرخ حل مشکل در اولین تماس",
    "kpi_name_en": "First Contact Resolution",
    "acronym": "FCR",
    "criterion": 6,
    "sub_criterion": 1,
    "category": "Customer Perceptions",
    "sub_category": "Service Effectiveness"
