    "kpi_code": "R6-1-005",
    "kpi_name_fa": "رضایت از کیفیت محصول/خدمت",
    "kpi_name_en": "Product/Service Quality Satisfaction",
    "criterion": 6,
    "sub_criterion": 1,
    "category": "Customer Perceptions",
    "sub_category": "Quality Perception"
  },
  "definition": {
    "description_fa": "میزان رضایت مشتریان از کیفیت محصولات یا خدمات ارائه شده توسط سازمان. این شاخص میزان انطباق محصول/خدمت با انتظارات، استانداردها و نیازهای مشتری را اندازه‌گیری می‌کند و شامل ابعاد مختلف کیفی مانند عملکرد، دوام، قابلیت اعتماد، ویژگی‌ها و زیبایی‌شناسی است.",
    "description_en": "The level of customer satisfaction with the quality of products or services provided by the organization. This KPI measures how well the product/service meets customer expectations, standards, and needs, encompassing various quality dimensions such as performance, durability, reliability, features, and aesthetics.",
    "purpose": "ارزیابی ادراک مشتریان از کیفیت محصولات/خدمات و شناسایی فرصت‌های بهبود کیفی",
    "scope": "تمام محصولات و خدمات ارائه شده به مشتریان خارجی",
    "limitations": "ممکن است تحت تأثیر عوامل ذهنی و انتظارات متفاوت مشتریان قرار گیرد"
  },
  "measurement": {
    "formula": "((تعداد مشتریان راضی از کیفیت / کل مشتریان پاسخ‌دهنده) × 100)",
    "formula_en": "((Number of customers satisfied with quality / Total respondents) × 100)",
    "unit": "درصد",
    "scale": "0-100",
    "measurement_type": "نسبی (Ratio)",
    "frequency": "ماهانه",
    "data_source": [
      "نظرسنجی رضایت مشتری",
      "فرم‌های ارزیابی کیفیت",
      "مصاحبه‌های مشتری",
      "نظرات آنلاین",
      "سیستم CRM"
    ],
    "threshold_satisfied": "امتیاز 4 یا 5 از 5 (یا 8-10 از 10)"
  },
  "data_collection": {
    "collection_method": "ترکیبی (نظرسنجی آنلاین، تلفنی، حضوری)",
    "sample_size": "حداقل 200 پاسخ‌دهنده در ماه",
    "sampling_method": "تصادفی ساده از مشتریان فعال",
    "data_quality_checks": [
