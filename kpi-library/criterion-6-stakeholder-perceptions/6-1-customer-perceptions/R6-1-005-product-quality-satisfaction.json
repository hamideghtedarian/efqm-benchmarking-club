  "calculation_example": {
    "scenario": "نظرسنجی ماهانه از مشتریان",
    "input_data": {
      "total_respondents": 500,
      "satisfied_customers": 425,
      "quality_rating_5": 250,
      "quality_rating_4": 175,
      "quality_rating_3": 50,
      "quality_rating_2": 20,
      "quality_rating_1": 5
    },
    "calculation_steps": [
      "گام 1: شمارش مشتریان راضی (امتیاز 4-5) = 250 + 175 = 425",
      "گام 2: محاسبه درصد = (425 / 500) × 100 = 85%"
    ],
    "result": "85%",
    "interpretation": "85% از مشتریان از کیفیت محصولات/خدمات راضی هستند، که نشان‌دهنده عملکرد خوب است اما فضای بهبود وجود دارد."
  },
