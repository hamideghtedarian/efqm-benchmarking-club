  "calculation_example": {
    "scenario": "نظرسنجی از 120 ذینفع",
    "input_data": {
      "total_responses": 120,
      "score_5": 40,
      "score_4": 50,
      "score_3": 20,
      "score_2": 7,
      "score_1": 3
    },
    "calculation_steps": [
      "مجموع = (40×5) + (50×4) + (20×3) + (7×2) + (3×1)",
      "= 200 + 200 + 60 + 14 + 3 = 477",
      "میانگین = 477 / 120 = 3.98",
      "درصد = (3.98 / 5) × 100 = 79.5%"
    ],
    "result": "79.5%",
    "interpretation": "رضایت 79.5% نشان‌دهنده اعتماد خوب به حاکمیت است. 75% راضی اما 8.3% نگران که نیاز به بهبود دارد."
  },
