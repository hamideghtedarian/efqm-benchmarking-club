# EFQM Benchmarking Club - Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# Application
# ==========================================
APP_NAME=EFQM Benchmarking Club
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=True

# ==========================================
# Database (Future Use)
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=efqm_club
DB_USER=your_username
DB_PASSWORD=your_password

# ==========================================
# API Settings (Future Use)
# ==========================================
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-change-this
API_CORS_ORIGINS=http://localhost:3000

# ==========================================
# Email (Future Use)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ==========================================
# Development Tools
# ==========================================
ENABLE_SWAGGER_UI=True
